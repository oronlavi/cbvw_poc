<div class="center"><h3>Live match score:</h3></div>
<% match = Match.last unless match = Match.find_last_by_ended(false) %> <!-- pick an ongoing match, or the latest one to end if there is none -->
<% if !match.nil? then %>
    <div class="well center">
      <div class="row-fluid">
        <div class="span4">
          <span class="label label-info"><%= match.homeuser.username %></span>
        </div>
        <div class="span4">
          <hr>
        </div>
        <div class="span4">
          <span class="label label-info"><%= match.awayuser.username %></span>
        </div>
      </div>

      <div class="row-fluid">
        <div class="span4">
          <span class="label label-info"><%= match.hometeam %></span>
        </div>
        <div class="span4">
          <span class="label label-important">vs</span></div>
        <div class="span4">
          <span class="label label-info"><%= match.awayteam %></span>
        </div>
      </div>
      <br/>

      <div class="row-fluid">
        <div class="span4">
          <span class="label label-info"><%= match.homegoals %></span>
        </div>
        <div class="span4">
          <hr>
        </div>
        <div class="span4">
          <span class="label label-info"><%= match.awaygoals %></span>
        </div>
      </div>

      <% if !match.ended %>
          <div class="row-fluid">
            <div class="span12">
              <span class="label label-info">Minutes in: <%= match.minutes %></span>
            </div>
          </div>
      <% end %>
<% end %>
</div>